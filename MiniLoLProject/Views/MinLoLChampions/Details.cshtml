@model MiniLoLProject.DAL.MinLoLChampion

@{
    ViewBag.Title = Model.Name +  " Details";
}



<div>
  
    <div class="champdet-wrapper">
        <div class="detchamp col-md-6">
            <div class="detchamptop">
                <div class="champicon">
                    <img src="~/Content/Champions/Icons/@Html.DisplayFor(model => model.ChampIcon)"/>
                </div>
                <div class="col-md-6 champinfo">
                   <h3>@Html.DisplayFor(model => model.Name)</h3>
                    @Html.DisplayFor(model => model.Title)
                    <br />
                    <br />
                    @Html.DisplayFor(model => model.MinLoLRole.RoleName)
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="champbio">
                <p>@Html.DisplayFor(model => model.ChampBio)</p>
            </div>
        </div>
        <div class="detult col-md-6">
            <div class="detulttop">
                <div class="ulticon">
                    <img src="~/Content/Ultimates/Icons/@Html.DisplayFor(model => model.MinLoLUltimate.UltimateIcon)" />
                </div>
                <div class="col-md-6 ultinfo">
                    <h4>@Html.DisplayFor(model => model.MinLoLUltimate.UltimateName)</h4>
                    @Html.DisplayFor(model => model.MinLoLUltimate.UltimateCost)
                    <br />
                   
                    <p>@Html.DisplayFor(model => model.MinLoLUltimate.UltimateDescription)</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="ultpic">
                <img src="~/Content/Ultimates/Pic/@Html.DisplayFor(model => model.MinLoLUltimate.UltimatePic)" />
            </div>
            
        </div>
        <div class="clearfix"></div>
    </div>
          

        
       <img style="visibility:hidden;display:none;" id="bgGrab" src="~/Content/Champions/Pics/@Html.DisplayFor(model => model.ChampPic)" />
         
       
</div>
<br />
<p>
@if (Request.IsAuthenticated && User.IsInRole("Admin"))
{
    @Html.ActionLink("Edit", "Edit", new { id = Model.ChampID }, new { @class = "btn btn-default" }) 
}
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</p>
@section scripts
{
    <script>
    
        $(document).ready(function () {
            //Grab image
            var bg = document.getElementById("bgGrab").src;

            //set background
            document.getElementById("body").style.background = 'url(' + bg + ') no-repeat top';
            document.getElementById("body").style.backgroundColor = '#000000';
            //document.getElementById("content").style.marginTop = '450px';



        });
        
    </script>
   
}
@section detailspush
    {
<div class="transparent-section"> 
    <div class="progress-nav">
    @Html.ActionLink("Home", "Index", "Home") >
     @Html.ActionLink("Champions", "Index", "MinLoLChampions") >
    </div><div class="champ-name">
    <h1>@Html.DisplayFor(model => model.Name)</h1><h2>@Html.DisplayFor(model => model.Title)</h2></div></div>

    }